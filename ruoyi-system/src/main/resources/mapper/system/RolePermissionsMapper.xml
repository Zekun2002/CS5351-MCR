<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.RolePermissionsMapper">
    
    <resultMap type="RolePermissions" id="RolePermissionsResult">
        <result property="roleId"    column="role_id"    />
        <result property="roleName"    column="role_name"    />
        <result property="permission"    column="permission"    />
    </resultMap>

    <sql id="selectRolePermissionsVo">
        select role_id, role_name, permission from role_permissions
    </sql>

    <select id="selectRolePermissionsList" parameterType="RolePermissions" resultMap="RolePermissionsResult">
        <include refid="selectRolePermissionsVo"/>
        <where>  
            <if test="roleName != null  and roleName != ''"> and role_name like concat('%', #{roleName}, '%')</if>
            <if test="permission != null  and permission != ''"> and permission = #{permission}</if>
        </where>
    </select>
    
    <select id="selectRolePermissionsByRoleId" parameterType="Long" resultMap="RolePermissionsResult">
        <include refid="selectRolePermissionsVo"/>
        where role_id = #{roleId}
    </select>

    <insert id="insertRolePermissions" parameterType="RolePermissions" useGeneratedKeys="true" keyProperty="roleId">
        insert into role_permissions
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleName != null">role_name,</if>
            <if test="permission != null">permission,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roleName != null">#{roleName},</if>
            <if test="permission != null">#{permission},</if>
         </trim>
    </insert>

    <update id="updateRolePermissions" parameterType="RolePermissions">
        update role_permissions
        <trim prefix="SET" suffixOverrides=",">
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="permission != null">permission = #{permission},</if>
        </trim>
        where role_id = #{roleId}
    </update>

    <delete id="deleteRolePermissionsByRoleId" parameterType="Long">
        delete from role_permissions where role_id = #{roleId}
    </delete>

    <delete id="deleteRolePermissionsByRoleIds" parameterType="String">
        delete from role_permissions where role_id in 
        <foreach item="roleId" collection="array" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>
</mapper>